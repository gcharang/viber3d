{
	"name": "starter",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"sourceRoot": "apps/starter",
	"// targets": "to see all targets run: nx show project starter --web",
	"targets": {
		"build": {
			"executor": "@nx/vite:build",
			"outputs": ["{options.outputPath}"],
			"defaultConfiguration": "production",
			"options": {
				"outputPath": "dist/apps/starter"
			},
			"configurations": {
				"development": {
					"mode": "development"
				},
				"production": {
					"mode": "production"
				}
			}
		},
		"serve": {
			"executor": "@nx/vite:dev-server",
			"defaultConfiguration": "development",
			"options": {
				"buildTarget": "starter:build"
			},
			"configurations": {
				"development": {
					"buildTarget": "starter:build:development",
					"hmr": true
				},
				"production": {
					"buildTarget": "starter:build:production",
					"hmr": false
				}
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["apps/starter/**/*.{ts,tsx,js,jsx}"]
			}
		}
	},
	"tags": []
}
