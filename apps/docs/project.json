{
	"name": "docs",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"sourceRoot": "apps/docs",
	"// targets": "to see all targets run: nx show project docs --web",
	"targets": {
		"build": {
			"executor": "@nx/nuxt:build",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "apps/docs/.output"
			}
		},
		"serve": {
			"executor": "@nx/nuxt:serve",
			"options": {
				"port": 3000,
				"host": "localhost",
				"devServer": {
					"open": true
				}
			}
		},
		"preview": {
			"executor": "@nx/nuxt:preview",
			"dependsOn": ["build"],
			"options": {
				"port": 3000,
				"host": "localhost"
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["apps/docs/**/*.{ts,tsx,vue}"]
			}
		}
	},
	"tags": []
}
